@model IEnumerable<Stardust.Starterkit.Configuration.Repository.IServiceHostSettings>
<div  class="panel">
    <div class="panel panel-title" style="cursor: pointer" data-toggle="collapse" data-target="#hosts">&nbsp;<i class="glyphicon glyphicon-home"></i> Service hosts</div>
    <div id="hosts" class="panel panel-body collapse">
        <p>
            @Html.ActionLink("Create New", "Create", "ServiceHosts", new { id = ViewBag.Id }, null)
        </p>
        <table class="table table-striped table-hover table-condensed ">
            <tr>
                <th ">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="hidden-xs hidden-sm hidden-md">
                    @Html.DisplayNameFor(model => model.Level)
                </th>
                <th class="hidden-xs hidden-sm hidden-md">
                    @Html.DisplayNameFor(model => model.Visualization)
                </th>
                <th></th>
            </tr>

            @foreach (var item in from m in Model orderby m.Name ascending select m)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="hidden-xs hidden-sm hidden-md">
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td class="hidden-xs hidden-sm hidden-md">
                        @Html.DisplayFor(modelItem => item.Visualization)
                    </td>
                    <td>
                        <span class="pull-right">
                            @Html.ActionLink("Details", "Details", "ServiceHosts", new { id = item.Id }, new { Class = "btn btn-link ", title = "Edit " + item.Name }) |
                            @Html.ActionLink("Delete", "Delete", "ServiceHosts", new { id = item.Id }, new { Class = "btn btn-link ", title = "Delete " + item.Name })
                        </span>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
