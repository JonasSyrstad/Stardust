@model IEnumerable<Stardust.Starterkit.Configuration.Repository.IConfigSet>

@{
    ViewBag.Title = "Configuration set overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Configuration set overview</h2>

