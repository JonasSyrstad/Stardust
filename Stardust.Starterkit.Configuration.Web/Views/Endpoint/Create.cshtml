@using Stardust.Starterkit.Configuration.Business
@model Stardust.Starterkit.Configuration.Repository.Endpoint

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Endpoint</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Name, new SelectList(ConfigReaderFactory.GetAvailableBindingTypes(ViewBag.AddedBindings),"Key","Key"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <i class="glyphicon glyphicon-backward"></i> @Html.ActionLink("Back", "Details", "Service", new { id = "edit", item = ViewBag.ServiceId }, null) 
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
