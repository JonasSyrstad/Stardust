@model IEnumerable<Stardust.Starterkit.Configuration.Repository.IEndpointParameter>



@Html.ActionLink("Create", "CreateSub", "Parameters", new { id = "create", item = ViewBag.Id }, null)

<table class="table table-striped table-hover table-condensed ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfigurableForEachEnvironment)
        </th>

        <th></th>
    </tr>

    @foreach (var item in from m in Model orderby m.Name ascending select m)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="wd250">
                <div class="iffyTip wd250">@Html.DisplayFor(modelItem => item.ItemValue)</div>
            </td>
            <td class="wd250">
                <div class="iffyTip wd250">@Html.DisplayFor(modelItem => item.Value)</div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfigurableForEachEnvironment)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", "Parameters", new { id = "upd", item = item.Id }, null)
            </td>
        </tr>
    }

</table>
