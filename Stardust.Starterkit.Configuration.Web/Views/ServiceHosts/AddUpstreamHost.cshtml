@model HostsModel

@{
    ViewBag.Title = "AddUptreamHost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddUptreamHost</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>HostsModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedHost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedHost, new SelectList(Model.AwailableHosts, "Id", "Name", Model.SelectedHost), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SelectedHost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to service host", "Details", new {id=Model.Id})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
