@model Stardust.Core.Services.ConfigurationReader.EnvironmentConfig

@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View1</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EnvironmentConfig</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.EnvironmentName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EnvironmentName)
            @Html.ValidationMessageFor(model => model.EnvironmentName)
        </div>
        <p>
            Add or update environmental parameter
            key:<input type="text" id="keyName"/> value: <input type="text" id="keyValue"/>
        </p>
        @foreach (var p in Model.Parameters)
        {
            <p><div>@p.Name</div> : <div>@p.Value</div></p>
        }
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
